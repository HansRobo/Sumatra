            <artifactId>moduli-geometry</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- run Sumatra with mvn exec:java -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <configuration>
                    <executable>java</executable>
                    <workingDirectory>${project.basedir}/../..</workingDirectory>
                    <arguments>
                        <argument>-Xms512m</argument>
                        <argument>-Xmx4G</argument>
                        <argument>-server</argument>
                        <argument>-Xnoclassgc</argument>
                        <argument>-Xverify:none</argument>
                        <argument>-Dsun.java2d.d3d=false</argument>
                        <argument>-XX:+UseG1GC</argument>
                        <argument>-Djava.net.preferIPv4Stack=true</argument>
                        <argument>-XX:-OmitStackTraceInFastThrow</argument>
                        <argument>-classpath</argument>
                        <!-- automatically creates the classpath using all project dependencies,
                             also adding the project build directory -->
                        <classpath/>
                        <argument>edu.tigers.sumatra.Sumatra</argument>
                    </arguments>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>analyze</id>
                        <goals>
                            <goal>analyze-only</goal>
                        </goals>
                        <configuration>
                            <!-- Some moduli modules are not referenced in code attentional,
                            but should still be included. -->
                            <ignoredUnusedDeclaredDependencies>
                                <ignoredUnusedDeclaredDependencie>
                                    edu.tigers.sumatra:moduli-movement-limit-observer:*
                                </ignoredUnusedDeclaredDependencie>
                                <ignoredUnusedDeclaredDependencie>
                                    edu.tigers.sumatra:moduli-wp-export:*
                                </ignoredUnusedDeclaredDependencie>
                                <ignoredUnusedDeclaredDependencie>
                                    edu.tigers.sumatra:moduli-parameter-optimizer:*
                                </ignoredUnusedDeclaredDependencie>
                            </ignoredUnusedDeclaredDependencies>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>