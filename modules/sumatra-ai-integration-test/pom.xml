<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>sumatra-ai-integration-test</artifactId>

    <parent>
        <groupId>edu.tigers.sumatra</groupId>
        <artifactId>sumatra-parent</artifactId>
        <version>2019-SNAPSHOT</version>
        <relativePath>../sumatra-parent/pom.xml</relativePath>
    </parent>


    <profiles>
        <profile>
            <id>integrationTests</id>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <includes>
                                <include>**/*IntegrationTest.java</include>
                            </includes>
                            <excludes>
                                <exclude>**/*PerfTest.java</exclude>
                            </excludes>
                            <runOrder>alphabetical</runOrder>
                        </configuration>
                    </plugin>
                </plugins>
            </build>

        </profile>
    </profiles>

    <dependencies>
        <dependency>
            <groupId>edu.tigers.sumatra</groupId>
            <artifactId>moduli-ai-controller</artifactId>
        </dependency>
        <dependency>
            <groupId>edu.tigers.sumatra</groupId>
            <artifactId>moduli-ai</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>edu.tigers.sumatra</groupId>
            <artifactId>moduli-autoreferee</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>edu.tigers.sumatra</groupId>
            <artifactId>sumatra-simulation-control</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>com.github.g3force</groupId>
            <artifactId>configurable</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>edu.tigers.sumatra</groupId>
            <artifactId>common-math</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>edu.tigers.sumatra</groupId>
            <artifactId>moduli-geometry</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.github.TIGERs-Mannheim</groupId>
            <artifactId>moduli</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>edu.tigers.sumatra</groupId>
            <artifactId>common</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>edu.tigers.sumatra</groupId>
            <artifactId>moduli-referee</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>edu.tigers.sumatra</groupId>
            <artifactId>moduli-wp</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>edu.tigers.sumatra</groupId>
            <artifactId>sumatra-snapshot</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.assertj</groupId>
            <artifactId>assertj-core</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>edu.tigers.sumatra</groupId>
            <artifactId>sumatra-model</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>edu.tigers.sumatra</groupId>
            <artifactId>common-bot</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>edu.tigers.sumatra</groupId>
            <artifactId>sumatra-skillsystem</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>edu.tigers.sumatra</groupId>
            <artifactId>sumatra-pathfinder</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>edu.tigers.sumatra</groupId>
            <artifactId>moduli-record</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>edu.tigers.sumatra</groupId>
            <artifactId>moduli-botmanager-sim</artifactId>
        </dependency>
        <dependency>
            <groupId>edu.tigers.sumatra</groupId>
            <artifactId>moduli-wp-export</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>analyze</id>
                        <goals>
                            <goal>analyze-only</goal>
                        </goals>
                        <configuration>
                            <!-- Some moduli modules are not referenced in code attentional,
                            but should still be included. -->
                            <ignoredUnusedDeclaredDependencies>
                                <ignoredUnusedDeclaredDependencie>
                                    edu.tigers.sumatra:moduli-botmanager*
                                </ignoredUnusedDeclaredDependencie>
                                <ignoredUnusedDeclaredDependencie>
                                    edu.tigers.sumatra:moduli-wp-export*
                                </ignoredUnusedDeclaredDependencie>
                            </ignoredUnusedDeclaredDependencies>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>