<?xml version="1.0" encoding="UTF-8"?>
<edu.tigers.autoreferee base="edu.tigers.autoreferee">
    <AutoRefConfig>
        <ballPlacementAccuracy>200.0</ballPlacementAccuracy>
        <ballPlacementBlueEnabled>false</ballPlacementBlueEnabled>
        <ballPlacementPreference>NEUTRAL</ballPlacementPreference>
        <ballPlacementWindow>15000</ballPlacementWindow>
        <ballPlacementYellowEnabled>false</ballPlacementYellowEnabled>
        <ballStationarySpeedThreshold>0.1</ballStationarySpeedThreshold>
        <botStationarySpeedThreshold>0.3</botStationarySpeedThreshold>
        <maxBallVelocity>8.5</maxBallVelocity>
        <maxBotStopSpeed>1.7</maxBotStopSpeed>
        <refboxHostname>localhost</refboxHostname>
        <refboxPort>10007</refboxPort>
        <robotBallPlacementAccuracy>100.0</robotBallPlacementAccuracy>
    </AutoRefConfig>
    <engine>
        <calc>
            <BotBallContactCalc>
                <mode>REGULAR</mode>
            </BotBallContactCalc>
            <PossibleGoalCalc>
                <CORE_AREA_MARGIN>50.0</CORE_AREA_MARGIN>
                <GOAL_BALL_CHANGE_ANGLE_DEGREE>45.0</GOAL_BALL_CHANGE_ANGLE_DEGREE>
            </PossibleGoalCalc>
        </calc>
        <events>
            <impl>
                <BallLeftFieldDetector>
                    <goalLineThreshold>10.0</goalLineThreshold>
                    <icingKickoffLineThreshold>200.0</icingKickoffLineThreshold>
                </BallLeftFieldDetector>
                <BotCollisionDetector>
                    <CRASH_COOLDOWN_TIME_MS>1000.0</CRASH_COOLDOWN_TIME_MS>
                    <CRASH_VEL_THRESHOLD>2.0</CRASH_VEL_THRESHOLD>
                    <MIN_DISTANCE_FACTOR>0.9</MIN_DISTANCE_FACTOR>
                    <MIN_SPEED_DIFF>2.2</MIN_SPEED_DIFF>
                </BotCollisionDetector>
                <BotInDefenseAreaDetector>
                    <COOLDOWN_TIME_MS>3000</COOLDOWN_TIME_MS>
                    <partialTouchMargin>20.0</partialTouchMargin>
                </BotInDefenseAreaDetector>
                <BotStopSpeedDetector>
                    <initialWaitTimeMs>2500</initialWaitTimeMs>
                    <violationThresholdMs>300</violationThresholdMs>
                </BotStopSpeedDetector>
                <DefenderToKickPointDistanceDetector>
                    <distanceTolerance>20.0</distanceTolerance>
                    <maxOuterCircleLingerTime>3000</maxOuterCircleLingerTime>
                    <strictMode>true</strictMode>
                    <violatorCooldownTime>1500</violatorCooldownTime>
                </DefenderToKickPointDistanceDetector>
                <DoubleTouchDetector>
                    <touchTolerance>10.0</touchTolerance>
                </DoubleTouchDetector>
                <DribblingDetector>
                    <DRIBBLING_BOT_BALL_DISTANCE>40.0</DRIBBLING_BOT_BALL_DISTANCE>
                    <MAX_DRIBBLING_LENGTH>1000.0</MAX_DRIBBLING_LENGTH>
                </DribblingDetector>
            </impl>
        </events>
        <states>
            <impl>
                <KickState>
                    <followUpOverride>false</followUpOverride>
                </KickState>
                <PrepareKickoffState>
                    <MIN_WAIT_TIME_MS>4000</MIN_WAIT_TIME_MS>
                    <READY_WAIT_TIME_MS>1500</READY_WAIT_TIME_MS>
                </PrepareKickoffState>
                <StopState>
                    <moveBallSlowlyToTarget>true</moveBallSlowlyToTarget>
                    <READY_WAIT_TIME_MS>3000</READY_WAIT_TIME_MS>
                    <STOP_WAIT_TIME_MS>2000</STOP_WAIT_TIME_MS>
                </StopState>
            </impl>
        </states>
    </engine>
</edu.tigers.autoreferee>
