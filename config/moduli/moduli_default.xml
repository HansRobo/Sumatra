<?xml version="1.0" encoding="ISO-8859-1" ?>

<centralSoftware>

	<moduliPath>edu.dhbw.mannheim.tigers.sumatra.model.modules</moduliPath>

	<globalConfiguration>

		<ourColor>yellow</ourColor>
		<ourGameDirection>!leftToRight</ourGameDirection> <!-- in Istanbul: left is right -->

		<multicastMode>true</multicastMode>			<!-- true -->

	</globalConfiguration>


	<module id="cam" type="ACam">

		<implementation> cam.SSLVisionCam </implementation>

		<properties>
			<interface> 172.31.10.0 </interface>		<!-- 192.168.1.0 -->
			<address> 224.5.23.2 </address>				<!-- 224.5.23.2 -->
			<port> 10002 </port>						<!-- 40101 [Sim]/ 10002 [SSLVision] -->
		</properties>

	</module>


	<module id="worldpredictor" type="AWorldpredictor">
		<!-- //:::>>> (start reading configuration)(do not delete this line!) -->
		<implementation> worldpredictor.Oracle_extKalman </implementation>

		<properties>
			<camNo>2</camNo>
			<stepSize>10</stepSize> <!-- in ms -->
			<stepCount>5</stepCount>
			<minTigersInWorldFrame>5</minTigersInWorldFrame>
			<minFoesInWorldFrame>5</minFoesInWorldFrame>
			<useCam>-1</useCam><!-- use -1 to get frames from both cams -->
		</properties>

		<dependency>cam</dependency>
		<!-- //:::<<< (end reading configuration)(do not delete this line!) -->
	</module>


	<module id="referee" type="AReferee">

		<implementation> referee.RefereeReceiver </implementation>

		<properties>
			<interface> 172.31.10.0 </interface>	<!-- 192.168.1.0 -->
			<address> 224.5.23.1 </address>			<!-- 224.5.23.1 -->
			<port> 10001 </port>					<!-- 40101|10001[real] -->
		</properties>

	</module>


	<module id="botmanager" type="ABotManager">

		<implementation> botmanager.GenericManager </implementation>

		<properties>
			<multicast>
				<interface>172.31.20.0</interface>	<!-- 192.168.7.0 -->
				<group>225.42.42.42</group>			<!-- 225.42.42.42 -->
				<localPort>10040</localPort>		<!-- 10040 -->
				<remotePort>10041</remotePort>		<!-- 10041 -->
			</multicast>
		</properties>

	</module>


	<module id="skillsystem" type="ASkillSystem">

		<implementation> skillsystem.GenericSkillSystem </implementation>

		<properties>
			<!-- [us] -->
			<minProcessingPeriod>20000</minProcessingPeriod>	<!-- 20000 -->
			<numThreads>5</numThreads>
		</properties>

		<dependency>botmanager</dependency>

	</module>
	
	
